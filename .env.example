# Database adapter selection: "mysql" or "sqlite"
DB=mysql

# Generic connection overrides shared by all adapters
DB_URL=jdbc:mysql://localhost:3306/authserver
DB_USER=root
DB_PASSWORD=root

# MySQL-specific overrides (used when DB=mysql)
MYSQL_URL=jdbc:mysql://localhost:3306/authserver
MYSQL_USER=root
MYSQL_PASSWORD=root

# SQLite-specific overrides (used when DB=sqlite)
SQLITE_URL=jdbc:sqlite:authserver.db
SQLITE_USER=
SQLITE_PASSWORD=
